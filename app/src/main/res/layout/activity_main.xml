<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#114CB0"
    android:orientation="vertical"
    android:paddingLeft="30dp"
    android:paddingTop="30dp"
    android:paddingRight="30dp"
    android:paddingBottom="30dp"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_weight="70"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/primeiroicone" />

    <Button
        android:id="@+id/btnSTT"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="30dp"
        android:layout_weight="15"
        android:drawableRight="@android:drawable/ic_btn_speak_now"
        android:drawableTint="#3F51B5"
        android:text="Falar Texto"
        android:textAllCaps="false"
        android:textSize="18dp"
        android:textStyle="italic" />

    <Button
        android:id="@+id/btnDT"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="15"
        android:drawableRight="@android:drawable/ic_menu_sort_alphabetically"
        android:drawableTint="#3F51B5"
        android:text="Digitar Texto"
        android:textAllCaps="false"
        android:textSize="18dp"
        android:textStyle="italic" />
</androidx.appcompat.widget.LinearLayoutCompat>